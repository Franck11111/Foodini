<div class="container-checkout">
  <div class="container">
    <% if @order.option_category == 'I am feeling lucky' %>
      <h3>Order summary</h3>
    <% else %>
      <h3>You chose: 'I am feeling cautious'</h3>
    <% end %>
  </div>
  <% if @order.option_category == 'I am feeling lucky' %>
    <h1 class="text-center">Thank you for your order <%= @order.user.first_name %>!</h1>
  <% else %>
    <h1 class="text-center">Here is what you got! Happy?</h1>
  <% end %>

  <% if @order.option_category == 'I am feeling lucky' %>
    <p class="text-center mt-4">
      <a class="btn btn-flat-landing" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
        Reveal your meal
      </a>
    </p>
  <% end %>

  <% if @order.option_category == 'I am feeling lucky' %>
    <div class="main-checkout row">
      <%= render "show_lucky" %>
      <div class="row d-block d-sm-none text-center">
        <%= render "show_buttons" %>
      </div>
      <div id="map" class="col-12 col-sm-5"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
    <div class="row d-none d-md-block text-center">
      <%= render "show_buttons" %>
    </div>
  <% else %>
    <div class="main-checkout">
      <%= render "show_cautious" %>
      <div class="row d-block d-sm-none text-center">
        <%= render "show_buttons" %>
      </div>
      <div id="map" class="col-12 col-sm-5"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
    <div class="row d-none d-md-block text-center">
      <%= render "show_buttons" %>
    </div>
  <% end %>
</div>
