<div class="navbar navbar-expand-sm navbar-light bg-light fixed-top">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "Logofoodini3.png", alt: "Foodini logo", class: "image_logo" %>
    <h4>Foodini</h4>
  <% end %>
  <div class="navbar-sections">
    <%= link_to "About", root_path(:anchor => "container-who-landing") %>
    <%= link_to "How it works", root_path(:anchor => "container-how-landing") %>
    <%= link_to "Testimonials", root_path(:anchor => "testimonial") %>
  </div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <%= image_tag "https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_640.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Home", "#", class: "dropdown-item" %>
            <%= link_to "My orders", orders_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <div id="login_links">
            <%= link_to "Sign Up", new_user_registration_path, class: "link-custom-color" %>
            <%= link_to "Login", new_user_session_path, class: "link-custom-color" %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
